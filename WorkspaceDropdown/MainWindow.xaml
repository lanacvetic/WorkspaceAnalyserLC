<Window x:Class="WfpDropdownExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dropdown Info Example" Height="200" Width="300">
    <Grid>
        <!-- Button to trigger showing info -->
        <Button Name="infoButton" Content="Click for Info" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="120" Height="30" Click="InfoButton_Click" Margin="100,50,0,0" />

        <!-- TextBlock to display the information -->
        <TextBlock Name="infoText" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30"
                   Margin="100,100,0,0" Text="No information yet" Visibility="Collapsed" />
    </Grid>
</Window>